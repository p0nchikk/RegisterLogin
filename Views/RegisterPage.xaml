<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RegisterLogin.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RegisterPage">
    <VerticalStackLayout>
        <Grid
            ColumnSpacing="10"
            RowDefinitions="auto,*,auto"
            RowSpacing="10">
            <!--  HEADER  -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                BackgroundColor="Red"
                HorizontalOptions="Center"
                Text="Welcome to Register"
                VerticalOptions="Center" />
            <!--  CONTENT  -->
            <ScrollView Grid.Row="1" BackgroundColor="White">
                <VerticalStackLayout Padding="20" Spacing="15">
                    <Entry
                        x:Name="EntryFullName"
                        Placeholder="Your Full Name"
                        TextColor="Black" />
                    <Label
                        x:Name="LblErrorFullName"
                        FontSize="10"
                        Text=""
                        TextColor="Red" />

                    <Grid ColumnDefinitions="*,Auto">
                        <Entry
                            x:Name="EntryPassword"
                            IsPassword="True"
                            Placeholder="Your Password"
                            TextColor="Black" />
                        <Button
                            Grid.Column="1"
                            Clicked="Button_TogglePassword_Clicked"
                            Text="Show/Hide" />
                    </Grid>
                    <Label
                        x:Name="LblErrorPassword"
                        FontSize="10"
                        Text=""
                        TextColor="Red" />
                    <Label
                        x:Name="LblMessage"
                        FontSize="15"
                        Text=""
                        TextColor="Red" />
                </VerticalStackLayout>
            </ScrollView>
            <!--  FOOTER  -->
            <Grid
                x:Name="Footer"
                Grid.Row="2"
                BackgroundColor="Yellow"
                ColumnDefinitions="*,*"
                RowDefinitions="*,*">
                <Button
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Fill"
                    Text="Go to Login"
                    VerticalOptions="Center" />
                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalOptions="Fill"
                    Text="Reset"
                    VerticalOptions="Center" />
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Clicked="ButtonRegister_Clicked"
                    HorizontalOptions="Fill"
                    Text="Register"
                    VerticalOptions="Center" />
            </Grid>
        </Grid>
    </VerticalStackLayout>
</ContentPage>