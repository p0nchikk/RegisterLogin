<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RegisterLogin.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="LoginPage">
    <VerticalStackLayout>
        <Grid
            BackgroundColor="White"
            Padding="20"
            ColumnSpacing="10"
            RowDefinitions="auto,*,auto"
            RowSpacing="10">
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource HeaderLabelStyle}"
                Text="Welcome to Login Page"
                VerticalOptions="Center" />

            <ScrollView Grid.Row="1" BackgroundColor="White">
                <VerticalStackLayout Margin="20" Spacing="15">
                    <Entry
                        x:Name="EntryUserName"
                        Placeholder="Username"
                        TextColor="Black" />
                    <Label
                        x:Name="LblErrorName"
                        FontSize="10"
                        Text=""
                        TextColor="Red" />
                    <Grid ColumnDefinitions="*,Auto">
                        <Entry
                            x:Name="EntryPassword"
                            IsPassword="True"
                            Placeholder="Password"
                            TextColor="Black" />
                        <Button
                            Grid.Column="1"
                            Clicked="Button_TogglePassword_Clicked"
                            Text="Show/Hide" />
                    </Grid>
                    <Label
                        x:Name="LblErrorPassword"
                        FontSize="10"
                        Text=""
                        TextColor="Red" />
                    <Label
                        x:Name="LblMessage"
                        FontSize="15"
                        Text=""
                        TextColor="Red" />
                </VerticalStackLayout>
            </ScrollView>
            <Grid
                x:Name="Footer"
                Grid.Row="2"
                ColumnDefinitions="*,*"
                RowDefinitions="*,*">
                <Button
                    Grid.Column="0"
                    Clicked="ButtonReset_Clicked"
                    HorizontalOptions="Fill"
                    Text="Reset"
                    VerticalOptions="Center" />
                <Button
                    Grid.Column="1"
                    Clicked="ButtonLogin_Clicked"
                    HorizontalOptions="Fill"
                    Text="Login"
                    VerticalOptions="Center" />

                <Label Grid.Row="1" Grid.ColumnSpan="2" Padding="0,12,0,0" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="14">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Don't have an account?   " TextColor="Black"/>
                            <Span Text="Sign Up" TextDecorations="Underline" TextColor="Purple">
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="ButtonGoToRegister_Clicked" />
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

            </Grid>
        </Grid>

    </VerticalStackLayout>
</ContentPage>